<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <!-- Text Appearances -->
  <style name="TextAppearance.Kommandah" parent="TextAppearance.AppCompat">
    <item name="android:textSize">@dimen/text_medium</item>
  </style>

  <style name="TextAppearance.Kommandah.Logo">
    <item name="android:fontFamily">@font/desib</item>
    <item name="android:textSize">@dimen/text_logo</item>
    <item name="android:textColor">@color/text_logo</item>
  </style>

  <style name="TextAppearance.Kommandah.ListItemSmall">
  </style>

  <style name="TextAppearance.Kommandah.ListItemBig">
    <item name="android:textSize">@dimen/text_large</item>
  </style>

  <style name="TextAppearance.Kommandah.DrawerHeaderTitle">
    <item name="android:textSize">@dimen/text_large</item>
    <item name="android:textColor">@color/text_drawer_header</item>
  </style>

  <style name="TextAppearance.Kommandah.ConsoleOutput">
    <item name="android:fontFamily">monospace</item>
    <item name="android:textColor">@color/text_console</item>
  </style>

  <!-- Widget Styles -->

  <style name="Widget.Kommandah" parent="AppTheme"></style>
  <style name="Widget.Kommandah.ImageView"></style>
  <style name="Widget.Kommandah.ImageView.DragHandle">
    <item name="android:tint">@color/text_primary</item>
    <item name="android:alpha">0.2</item>
  </style>

  <style name="Widget.Kommandah.Button" parent="Widget.AppCompat.Button"></style>
  <style name="Widget.Kommandah.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
  </style>
  <style name="Widget.Kommandah.Button.Borderless.Colored"
      parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:background">@drawable/bg_borderless_colored</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:tint">@color/text_primary_contrast</item>
  </style>

  <style name="Widget.Kommandah.ConsoleWindow">
    <item name="android:background">@color/main_background_console</item>
  </style>

  <style name="Widget.Kommandah.ProgressBar" parent="Widget.AppCompat.ProgressBar">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
  </style>
  <color name="text_drawer_header">#ffffff</color>
</resources>
