<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="de.mannodermaus.kommandah.views.main.MainActivity"
    android:background="@color/main_background">

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvInstructions"
      android:layout_width="0dp"
      android:layout_height="0dp"
      tools:listitem="@layout/list_item_instruction"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/toolbarBottom"/>

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbarBottom"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@color/accent"
      app:layout_constraintTop_toBottomOf="@id/rvInstructions"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">

    <ImageButton
        android:id="@+id/buttonExecute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play"/>
  </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>
